<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartNode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Embedded Node Runtime" />

    <TextView
        android:id="@+id/tvTerminalOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#111"
        android:textColor="#44FF44"
        android:padding="12dp"
        android:text="Terminal ready..." />

    <EditText
        android:id="@+id/etTerminalInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type command"
        android:inputType="text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRunCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run" />

</LinearLayout>
